<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="30dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:id="@+id/tvArabicDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arabic"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/tvEnglishDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="English"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tvBanglaDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bangla"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center"
            />

    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="30dp"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fajr"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"

            />

        <TextView
            android:id="@+id/tvFajr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fajr"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sunrise"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"

            />

        <TextView
            android:id="@+id/tvSunrise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sunrise"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dhuhr"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"

            />

        <TextView
            android:id="@+id/tvDhuhr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dhuhr"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asr"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"

            />

        <TextView
            android:id="@+id/tvAsr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asr"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"

            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Magrib"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"

            />

        <TextView
            android:id="@+id/tvMagrib"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="magrib"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"

            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ishaa"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"

            />

        <TextView
            android:id="@+id/tvIshaa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ishaa"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/tvNextPrayerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NPryer name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"

            />

        <TextView
            android:id="@+id/tvNextPrayerTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NPryer Time"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvNextPrayerTimeLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Time Left "
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>




</LinearLayout>